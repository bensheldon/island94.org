<% provide :title, "Search" %>

<h1>Search</h1>

<form id="search" class="d-flex my-3" action="/search" method="get">
  <div class="input-group">
    <input data-search-target="input" data-action="input->search#syncInputs" id="search-box" class="form-control search" role="search" name="q" placeholder="Search" aria-label="Search" results="0" type="text">
    <button type="submit" class="btn btn-outline-secondary">
      <i class="bi bi-search"></i>
      Search</
    </button>
  </div>
</form>

<h2>Search results</h1>
<div id="search-results" data-search-target="results">
  <em>Loading...</em>
</div>

<%= javascript_import_module_tag "search" %>
